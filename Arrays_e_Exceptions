package Arrays;

public class ExemploArray {

	public static void main(String[] args) {
		
		int [] meuArray; // Inicialização do Array de inteiros
		
		meuArray = new int [5];
		
		meuArray [0] = 10;
		meuArray [1] = 20;
		meuArray [2] = 30;
		meuArray [3] = 40;
		meuArray [4] = 50;
		// meuArray [4] = 50. Este elemento ultrapassou o tamanho do Array gerado.
		
		System.out.println("\n \n \t Trabalhando com Arrays e Exceptios");
		
		System.out.println("O Array cadastrado poossui: " + meuArray.length + " Objetos encontrados");
		
		System.out.println("\n Os dados escolhidos foram: \n");
		
		
		System.out.println(meuArray[4]);
		System.out.println(meuArray[3]);
		System.out.println(meuArray[2]);
		System.out.println(meuArray[1]);
		System.out.println(meuArray[0]);
		
		// Exception nem sempre é um erro de processo, e sim de alocação de dados para formatação do mesmos.  

	}

}

